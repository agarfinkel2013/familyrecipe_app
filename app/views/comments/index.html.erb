<h1>Comments</h1>

<p><%= link_to 'Add a New Comment', new_comment_url %></p>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>User</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.recipe_id %></td>
      <td><%= comment.user_id %></td>
      <td><%= comment.notes %></td>
  
      <td><%= link_to 'Show', comment_url(comment) %></td>
      <td><%= link_to 'Edit', edit_comment_url(comment) %></td>
      <td><%= link_to 'Destroy', comment_url(comment), method: 'delete', data: { confirm: "Do you really want to delete this comment?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

